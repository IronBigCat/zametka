{
  "name": "zametka",
  "version": "1.0.0",
  "description": "Русский аналог Notion. Простое десктопное приложение для заметок, страниц и текстовых блоков.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --x64 --arm64",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.example.zametka",
    "productName": "Zametka",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "add.py",
      "requirements.txt",
      "notes.json",
      "templates/**/*",
      "static/**/*"
    ],
    "extraResources": [
      "add.py",
      "requirements.txt",
      "notes.json",
      "templates/",
      "static/"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^36.0.0",
    "electron-builder": "^26.0.12"
  }
}
